<div class="container">
  <div class="row">
    <div class="col-md-8 col-xs-12">
      <div class="kc-cart__col kc-cart__col--left">
        {{ form.form_build_id }}
        {{ form.form_token }}
        {{ form.form_id }}

        {{ form.top }}

        {{ form.items }}

        {{ form.empty }}
      </div>
    </div>

    <div class="col-md-4 col-xs-12">
      {% if form.empty is empty %}
      <div class="kc-cart__col kc-cart__col--right">
        {{ form.sidebar }}
      </div>
      {% endif %}
    </div>
  </div>
</div>
