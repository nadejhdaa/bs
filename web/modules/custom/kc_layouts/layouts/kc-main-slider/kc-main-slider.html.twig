{#
/**
 * @file
 * Default theme implementation to display main slider layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout wrapper.
 *
 * @ingroup themeable
 */
#}
{% if content %}
  {# @DCG Drupal naming convention for CSS classes in layouts seems weird. Feel free to change it. #}
  {%
    set classes = [
      'layout',
      'layout--kc-main-slider',
    ]
  %}

  <div{{ attributes.addClass(classes) }}>

    {% if content.main %}
      <div {{ region_attributes.main.addClass('layout__region', 'layout__region--img') }}>
        {{ content.main }}
      </div>
    {% endif %}

  </div>

{% endif %}
