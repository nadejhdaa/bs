<div class="kc-product-card">

  <div class="kc-product-card__top">
    <div class="kc-product-card__flag-wrapper">
      {{ flag_link }}
    </div>

    <div class="kc-product-card__product-img">
      <a href="{{ url }}" class="kc-product-card__product-link kc-product-card__product-link--img">
        {{ img }}
      </a>
    </div>
  </div>

  <div class="kc-product-card__bottom">
    <div class="kc-product-card__heading">
      <a href="{{ url }}" class="kc-product-card__product-link kc-product-card__product-link--title">
        {{ title }}
      </a>
    </div>

    <div class="kc-product-card__product-type">
      {{ type }}
    </div>

    <div class="kc-product-card__product-price">
      {{ price }}
    </div>

    <div class="kc-product-card__product-add-to-cart">
      {{ add_to_cart }}
    </div>
  </div>

</div>
