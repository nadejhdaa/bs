{% set classes = ['splide', 'kc-point-gallery'] %}

<div {{ attributes.addClass(classes) }}>
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <div class="splide__track">
        <ul class="splide__list">
          {% for image in images %}
            <li class="kc-main-slider__slider-item splide__slide">
              {{ drupal_image(image, 'point_big', {
                alt: title,
                title: title
              })  }}
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div class="col-md-6 col-xs-12 kc-point-gallery__info">
      <div class="kc-point-gallery__address-info">
        <h3>{{ title }}</h3>
        <div class="kc-point-gallery__phone">
          {{ phone }}
        </div>

        <div class='kc-point-gallery__address'>
          {{ address }}
        </div>
      </div>

      <ul id="thumbnails" class="kc-point-gallery__thumbnails">
        {% for image in images %}
          <li class="kc-point-gallery__thumbnail">
            {{ drupal_image(image, 'point_thumb', {
              alt: title,
              title: title
              })
            }}
          </li>
        {% endfor %}
      </ul>

    </div>
  </div>
</div>
