<div {{ attributes }}>
  {% block top %}
  <div class="container">
    <div class="row">
      <div class="col col-md-6">

        <h3>{{ title }}</h3>
        {{ body|raw }}

        {{ drupal_link('Go shopping', url.toString, { attributes: { class: 'btn btn-primary'}}) }}
      </div>

      <div class="col col-md-6">
        {{ drupal_image(img) }}
      </div>
    </div>
    {% endblock %}

    {% block slider %}
      {{ items }}
    {% endblock %}
  </div>
</div>
